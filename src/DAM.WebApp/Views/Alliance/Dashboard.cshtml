
@{
    ViewData["Title"] = "Dashboard";
    ViewBag.Title = "Tableau de bord";
    ViewBag.pTitle = "Tableau de bord";
    ViewBag.pageTitle = "Alliances";
}
@section styles{


   

    <style>
        .overlay {
            position: absolute;
            top: 0px;
            left: 0px;
            width: 100%;
            height: 100%;
            background: black;
            opacity: .5;
            z-index: 400;
        }

       

    </style>


}
<div id="pageLoader" class="overlay">
    <div style="position: relative;left: 50%;top:50%;" class="spinner-border text-dark m-1" role="status">
        <span class="sr-only">Loading...</span>
    </div>
</div>
<input id="allianceid"
       name="allianceid"
       type="hidden"
       value="@ViewContext.RouteData.Values["allianceid"]?.ToString()" />

<div class="row">
    <div class="float-start">
        <div class="dropdown">
            <a class="dropdown-toggle" data-value="weekly" href="#" id="counterDropdown"
               data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <span class="text-muted">Cette semaine<i class="mdi mdi-chevron-down ms-1"></i></span>
            </a>

            <ul id="counterDropdownMenu" class="dropdown-menu dropdown-menu-start" aria-labelledby="dropdownMenuButton4">
                <li class="dropdown-item" data-value="weekly">Cette semaine</li>
                <li class="dropdown-item" data-value="monthly">Ce mois</li>
                <li class="dropdown-item" data-value="all">Depuis la création du monde</li>
            </ul>
        </div>
    </div>
    <div class="col-md-6 col-xl-3">
        <div class="card">
            <div class="card-body">
                
                <div class="float-end mt-2">
                    <div id="total-pending-def"></div>
                </div>
                <div>
                    <h4 class="mb-1 mt-1"><span id="defcount" data-plugin="counterup"></span></h4>
                    <p class="text-muted mb-0">Total défenses en attente</p>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-xl-3">
        <div class="card">
            <div class="card-body">
                <div class="float-end mt-2">
                    <div id="total-pending-atk"></div>
                </div>
                <div>
                    <h4 class="mb-1 mt-1"><span id="atkcount" data-plugin="counterup"></span></h4>
                    <p class="text-muted mb-0">Total attaques en attente</p>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-xl-6">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title mb-4">Défenses approuvé vs refusé</h4>
                <div style="width: 100%;height:100%;">
                    <canvas id="pie_chart_defense"></canvas>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-6">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title mb-4">Attaques approuvé vs refusé</h4>
                <div style="width: 100%;height:100%;">
                    <canvas id="pie_chart_attaque"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">

    <div class="col-12">
        <div class="card">
            <div class="card-body" style="height:400px;">
                <h4 class="card-title mb-4">Activités (def,atk) catégorisé par heures</h4>
                <div style="width: 100%;height:100%;">
                    <canvas id="activitylinechart"></canvas>
                </div>
            </div>
        </div>
    </div>

</div>
@section scripts{
        <!-- apexcharts -->
    <script src="~/assets/libs/apexcharts/apexcharts.min.js"></script>
    
    <script src="~/assets/libs/moment/min/moment.min.js"></script>
    <script src="~/assets/libs/moment/locale/fr-ca.js"></script>
    <script src="~/assets/libs/chart.js/chart.umd.min.js"></script>
    <script src="~/assets/js/views/alliance/dashboard.js"></script>

}
